<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CityTraffic.Views.StoppointListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:CityTraffic.Models.Entities"
             xmlns:vm="clr-namespace:CityTraffic.ViewModels"
             Title="StoppointListPage"
             x:DataType="vm:StoppointListViewModel">

    <CollectionView ItemsSource="{Binding Stoppoints}">

        <CollectionView.ItemTemplate>

            <DataTemplate x:DataType="model:Stoppoint">

                <Frame Margin="5,1">

                    <HorizontalStackLayout>

                        <Label FontAttributes="Bold"
                               Text="{Binding StoppointName}"/>

                        <Label Margin="5,0,0,0"
                               Text="{Binding Note}"/>

                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>