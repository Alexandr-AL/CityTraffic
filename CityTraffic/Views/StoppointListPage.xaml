<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CityTraffic.Views.StoppointListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:CityTraffic.Models.Entities"
             xmlns:vm="clr-namespace:CityTraffic.ViewModels"
             Title="StoppointListPage"
             x:DataType="vm:StoppointListViewModel">

    <CollectionView ItemsSource="{Binding Stoppoints}">

        <CollectionView.ItemTemplate>

            <DataTemplate x:DataType="model:EntityStoppoint">

                <Frame Margin="5,1">

                    <Grid>
                        <HorizontalStackLayout HorizontalOptions="Start"
                                               VerticalOptions="Center">

                            <Label FontAttributes="Bold"
                                   Text="{Binding StoppointName}"/>

                            <Label Margin="5,0,0,0"
                                   Text="{Binding Note}"/>

                        </HorizontalStackLayout>

                        <Switch HorizontalOptions="End"
                                VerticalOptions="Center"
                                IsToggled="{Binding FavoriteStoppoint}"/>

                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>