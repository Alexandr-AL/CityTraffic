<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CityTraffic.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:CityTraffic.Views"
             xmlns:vm="clr-namespace:CityTraffic.ViewModels"
             Title="City Traffic"
             x:DataType="vm:MainPageViewModel">

    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Start">

        <Button Command="{Binding InitializeCommand}"
                Text="Init DB"/>

        <Button Command="{Binding UpdateCommand}"
                Text="Update DB"/>

        <Button Command="{Binding ClearTablesCommand}"
                Text="Clear tables"/>

    </VerticalStackLayout>

</ContentPage>