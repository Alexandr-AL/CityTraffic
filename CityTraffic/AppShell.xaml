<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="CityTraffic.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:CityTraffic"
       xmlns:views="clr-namespace:CityTraffic.Views"
       Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate views:MainPage}"/>

        <Tab Title="Lists">
            <ShellContent Title="Stoppoints List"
                          ContentTemplate="{DataTemplate views:StoppointListPage}"/>

            <ShellContent Title="Transport Routes List"
                          ContentTemplate="{DataTemplate views:TransportRoutesPage}"/>
        </Tab>

        <ShellContent Title="Favorites"
                      ContentTemplate="{DataTemplate views:FavoritesPage}"/>
    </TabBar>

</Shell>
